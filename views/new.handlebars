<div class="container mx-auto my-5" style="color:white; background:#00758F; border-radius:8px; width: 540px">
  <h2 class="text-center pt-3">新增餐廳</h2>
  <div class="p-3 mt-3">
    <form action="/restaurants" method="POST" class="font-weight-light">
      <!-- 餐廳中文名稱  -->
      <div class="form-group row">
        <div class="col-sm-12">
          <input type="text" name="name" class="form-control" id="name" placeholder="請輸入餐廳中文名稱" required>
          <i class="fas fa-exclamation-triangle mr-2">
            <span>必填欄位</span>
          </i>
        </div>
      </div>

      <!-- 餐廳英文名稱  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="text" name="name_en" class="form-control" id="name_en" placeholder="請輸入餐廳英文名稱">
        </div>
      </div>

      <!-- 餐廳類別  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="text" name="category" class="form-control" id="category" placeholder="請輸入餐廳類別" required>
          <i class="fas fa-exclamation-triangle mr-2">
            <span>必填欄位</span>
          </i>
        </div>
      </div>

      <!-- 餐廳照片  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="text" name="image" class="form-control" id="image" placeholder="上傳圖片位址"
            value="https://imagesvc.meredithcorp.io/v3/mm/image?url=https%3A%2F%2Fstatic.onecms.io%2Fwp-content%2Fuploads%2Fsites%2F9%2F2020%2F04%2F24%2Fppp-why-wont-anyone-rescue-restaurants-FT-BLOG0420.jpg">
          <i class="fas fa-angle-double-up">
            <span>如果沒有圖片位址，此為預設圖片</span>
          </i>
        </div>
      </div>

      <!-- 餐廳地址  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="text" name="location" class="form-control" id="location" placeholder="請輸入餐廳中文地址">
        </div>
      </div>

      <!-- 餐廳電話  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="text" name="phone" class="form-control" id="phone" placeholder="請輸入餐廳電話">
        </div>
      </div>

      <!-- Google Maps  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="text" name="google_map" class="form-control" id="google_map" placeholder="請輸入餐廳google map位址">
        </div>
      </div>

      <!-- 餐廳評分  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="number" name="rating" class="form-control" id="rating" min="0" max="5" step="0.1"
            placeholder="請輸入餐廳分數(0~5分)" required>
          <i class="fas fa-exclamation-triangle mr-2">
            <span>必填欄位</span>
          </i>
        </div>
      </div>

      <!-- 餐廳簡介  -->
      <div class="form-group row">
        <div class="col-sm">
          <textarea class="form-control" name="description" id="description" cols="48" rows="3"
            placeholder="請輸入餐廳簡介描述"></textarea>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm text-center">
          <button type="submit" class="btn btn-warning" style="color:white" id="createItem">新增餐廳</button>
        </div>
      </div>
    </form>
  </div>
</div>