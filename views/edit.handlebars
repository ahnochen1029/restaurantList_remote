<div class="container mx-auto my-5" style="color:white; background:#00758F; border-radius:8px; width: 540px">
  <h2 class="text-center pt-3">編輯餐廳</h2>
  <div class="p-3 mt-3">
    <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST" class="font-weight-light">
      <!-- 餐廳中文名稱  -->
      <div class="form-group row">
        <div class="col-sm-12">
          <input type="text" name="name" class="form-control" id="name" value="{{restaurant.name}}" required>
          <i class="fas fa-exclamation-triangle mr-2">
            <span>必填欄位</span>
          </i>
        </div>
      </div>

      <!-- 餐廳英文名稱  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="text" name="name_en" class="form-control" id="name_en" value="{{restaurant.name_en}}">
        </div>
      </div>

      <!-- 餐廳類別  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="text" name="category" class="form-control" id="category" value="{{restaurant.category}}"
            required>
          <i class="fas fa-exclamation-triangle mr-2">
            <span>必填欄位</span>
          </i>
        </div>
      </div>

      <!-- 餐廳照片  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="text" name="image" class="form-control" id="image" value="{{restaurant.image}}">
        </div>
      </div>

      <!-- 餐廳地址  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="text" name="location" class="form-control" id="location" value="{{restaurant.location}}">
        </div>
      </div>

      <!-- 餐廳電話  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="text" name="phone" class="form-control" id="phone" value="{{restaurant.phone}}">
        </div>
      </div>

      <!-- Google Maps  -->
      <div class=" form-group row">
        <div class="col-sm">
          <input type="text" name="google_map" class="form-control" id="google_map" value="{{restaurant.google_map}}">
        </div>
      </div>

      <!-- 餐廳評分  -->
      <div class="form-group row">
        <div class="col-sm">
          <input type="number" name="rating" class="form-control" id="rating" min="0" max="5" step="0.1"
            value="{{restaurant.rating}}" required>
          <i class="fas fa-exclamation-triangle mr-2">
            <span>必填欄位</span>
          </i>
        </div>
      </div>

      <!-- 餐廳簡介  -->
      <div class="form-group row">
        <div class="col-sm">
          <textarea class="form-control" name="description" id="description" cols="48" rows="3"
            value="{{restaurant.description}}"></textarea>
        </div>
      </div>

      <div class=" form-group row">
        <div class="col-sm text-center">
          <button type="submit" class="btn btn-warning" style="color:white">確認送出</button>
        </div>
      </div>
    </form>
  </div>
</div>